<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@color/white"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Search for product"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/purple_500"
        android:textAlignment="center"/>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    >


    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:hint="Select Bike Condition"
        android:drawableTint="#646464"

        android:id="@+id/et_cond">

    </com.jaredrummler.materialspinner.MaterialSpinner>
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:hint="Select Your City"
        android:drawableTint="#646464"

        android:id="@+id/et_city">

    </com.jaredrummler.materialspinner.MaterialSpinner>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:hint="Select Bike Company"
        android:drawableTint="#646464"

        android:id="@+id/et_bikeComp">

    </com.jaredrummler.materialspinner.MaterialSpinner>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:hint="Select Bike Type"
        android:drawableTint="#646464"

        android:id="@+id/et_bike_type">

    </com.jaredrummler.materialspinner.MaterialSpinner>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:hint="Select Price range"
        android:drawableTint="#646464"

        android:id="@+id/et_price_range">

    </com.jaredrummler.materialspinner.MaterialSpinner>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_model"
        android:hint="Model"
        android:layout_marginTop="10dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="3dp"
            android:inputType="text">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
</ScrollView>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="10"
       android:layout_margin="5dp"
       android:orientation="horizontal">
       <Button
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="Close"
           android:layout_weight="5"
           android:id="@+id/btnClose"
           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
           android:textColor="@color/white"
           />
       <Button
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:text="Search"
           android:id="@+id/btnSearch"
           android:layout_weight="5"
       android:textAppearance="@style/TextAppearance.AppCompat.Body1"
       android:textColor="@color/white"
       />

   </LinearLayout>

</LinearLayout>